<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Employee</h1>
    <div class="col-6 offset-3">
      <form action="/employees" method="POST" novalidate class="validated-form">
        <div class="mb-3">
          <label class="form-lable" for="title">Name</label>
          <input
            class="form-control"
            type="text"
            id="name"
            name="employee[name]"
            required
          />
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label class="form-lable" for="role">Role</label>
          <input
            class="form-control"
            type="text"
            id="role"
            name="employee[role]"
            required
          />
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label class="form-lable" for="mobile">Mobile</label>
          <input
            class="form-control"
            type="text"
            id="mobile"
            name="employee[mobile]"
            required
          />
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label class="form-lable" for="manager">Manager</label>
            <input
              type="text"
              class="form-control"
              id="manager"
              name="employee[manager]"
              required
            />
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
    
        <div class="mb-3">
          <label class="form-lable" for="office">Office</label>
            <input
              type="text"
              class="form-control"
              id="office"
              name="employee[office]"
              required
            />
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>

        <div class="mb-3">
          <label class="form-lable" for="joinig-date">Joinig Date</label>
            <input
              type="date"
              class="form-control"
              id="date"
              min="1900-01-01"
              max="2200-12-01"
              name="employee[joinigDate]"
              required
            />
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
  
        <div class="mb-3">
          <button class="btn btn-success">Submit</button><br />
        </div>
      </form>
      <a href="/employees">All Employee</a>
    </div>
  </div>
  